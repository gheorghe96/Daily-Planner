<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gheorghe.notificationservice2.SettingActivity">

    <LinearLayout
        android:id="@+id/linearLayout_SettingHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Setting"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textAlignment="center"
            android:paddingTop="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/linearLayout_SettingHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="11"
            android:text="Delete all Events"
            android:textSize="20dp"/>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?android:attr/fastScrollTrackDrawable"
            app:srcCompat="@android:drawable/ic_menu_delete" />
    </LinearLayout>


</LinearLayout>
